{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ],
            "@client/*": [
                "./src/client/*"
            ],
            "@server/*": [
                "./src/server/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ]
}
